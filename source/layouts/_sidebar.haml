#sidebar
  #sidebar-name
    %span.sidebar-name-wrap Clutterless
  / #sidebar-name
  #sidebar-inner
    #sidebar-logo
      .logo
        .logo-image
          %a{href: "http://demo.onepagelove.com/clutterless", title: "Clutterless - A Minimal Blogging WordPress Theme"}
            %img{alt: "Clutterless", height: "48", src: "http://opldemos.wpengine.netdna-cdn.com/clutterless/wp-content/uploads/sites/2/2013/03/rob-96.png", width: "48"}/
        / .logo-image
        .logo-name
          %h1
            %a{href: "http://demo.onepagelove.com/clutterless", title: "Clutterless - A Minimal Blogging WordPress Theme"}
              %img{alt: "Clutterless", height: "25", src: "http://opldemos.wpengine.netdna-cdn.com/clutterless/wp-content/uploads/sites/2/2013/03/clutterless-logo.png"}/
        / .logo-name
        .tagline A Minimal Blogging WordPress Theme
        / .tagline
        .clear
      / #logo
    / #sidebar-logo
    / Mobile dropdown menu button
    #sidebar-dropdown
      %a{href: "#", onclick: "toggle_visibility('sidebar-mobile-info');"}

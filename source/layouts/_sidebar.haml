    .clear
    / This is what slides down on mobile menu click
    #sidebar-mobile-info
      #sidebar-bio
        %p This is an area where you can talk about yourself or your blog. Below are widgets with custom menus you can create in the dashboard, no coding needed. Neat!
      / /#sidebar-bio
      .clear
      #sidebar-widgets
        .sidebar-widget
          %span.sidebar-widget-title Connect
          .menu-connect-container
            %ul#menu-connect.menu
              %li#menu-item-880.menu-item.menu-item-type-custom.menu-item-object-custom.menu-item-880
                %a{href: "http://twitter.com/onepagelove"} Twitter
              %li#menu-item-882.menu-item.menu-item-type-custom.menu-item-object-custom.menu-item-882
                %a{href: "http://instagram.com/rob_hope"} Instagram
              %li#menu-item-881.menu-item.menu-item-type-custom.menu-item-object-custom.menu-item-881
                %a{href: "http://pinterest.com/onepagelove"} Pinterest
              %li#menu-item-931.menu-item.menu-item-type-custom.menu-item-object-custom.menu-item-931
                %a{href: "http://facebook.com/onepagelove"} Facebook
        .sidebar-widget
          %span.sidebar-widget-title Projects
          .menu-projects-container
            %ul#menu-projects.menu
              %li#menu-item-884.menu-item.menu-item-type-custom.menu-item-object-custom.menu-item-884
                %a{href: "http://onepagelove.com"} One Page Love
              %li#menu-item-885.menu-item.menu-item-type-custom.menu-item-object-custom.menu-item-885
                %a{href: "http://mmminimal.com"} mmminimal
              %li#menu-item-886.menu-item.menu-item-type-custom.menu-item-object-custom.menu-item-886
                %a{href: "http://footerlove.com"} Footer Love
              %li#menu-item-887.menu-item.menu-item-type-custom.menu-item-object-custom.menu-item-887
                %a{href: "http://themecobra.com"} ThemeCobra
      / #sidebar-widgets
      .clear
      #search
        %form#search-form{action: "http://demo.onepagelove.com/clutterless/", method: "post"}
          %input#search-field{name: "s", onfocus: "this.value=''", type: "text", value: "Search"}/
          %input#search-button{type: "submit", value: ""}/
      / #search
      .clear
      #sidebar-credit
        %p
          %a{href: "http://onepagelove.com/themes/clutterless", target: "_blank"} Clutterless WordPress Theme
          %span.by by
          %a{href: "http://onepagelove.com", target: "_blank"} One Page Love
      / #sidebar-credit
      .clear
    / #sidebar-mobile-info
  / sidebar-inner
/ sidebar
